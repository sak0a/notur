{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "lib": ["DOM", "ES2018"],
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@notur/sdk": ["../../sdk/dist"]
        },
        "outDir": "./resources/frontend/dist",
        "rootDir": "./resources/frontend/src",
        "skipLibCheck": true
    },
    "include": ["resources/frontend/src/**/*"]
}

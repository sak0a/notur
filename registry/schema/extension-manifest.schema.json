{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Notur Extension Manifest",
    "type": "object",
    "required": ["id", "name", "version"],
    "properties": {
        "notur": {
            "type": "string",
            "description": "Notur manifest format version"
        },
        "id": {
            "type": "string",
            "pattern": "^[a-z0-9\\-]+/[a-z0-9\\-]+$",
            "description": "Unique extension identifier (vendor/name)"
        },
        "name": {
            "type": "string",
            "description": "Human-readable extension name"
        },
        "version": {
            "type": "string",
            "description": "Semantic version string"
        },
        "description": {
            "type": "string"
        },
        "authors": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "email": { "type": "string" }
                },
                "required": ["name"]
            }
        },
        "license": {
            "type": "string"
        },
        "requires": {
            "type": "object",
            "properties": {
                "notur": { "type": "string" },
                "pterodactyl": { "type": "string" },
                "php": { "type": "string" }
            }
        },
        "dependencies": {
            "type": "object",
            "additionalProperties": { "type": "string" }
        },
        "capabilities": {
            "type": "object",
            "description": "DEPRECATED: Capabilities are now auto-detected from feature definitions. Only needed for version constraints.",
            "additionalProperties": { "type": "string" }
        },
        "entrypoint": {
            "type": "string",
            "description": "Fully qualified PHP class name (optional - auto-inferred from id if omitted)"
        },
        "autoload": {
            "type": "object",
            "description": "PSR-4 autoload mapping (optional - auto-inferred from id if omitted)",
            "properties": {
                "psr-4": {
                    "type": "object",
                    "additionalProperties": { "type": "string" }
                }
            }
        },
        "backend": {
            "type": "object",
            "description": "Backend configuration (routes, migrations, etc. are auto-discovered from conventional paths if omitted)",
            "properties": {
                "routes": {
                    "type": "object",
                    "properties": {
                        "api-client": { "type": "string" },
                        "admin": { "type": "string" },
                        "web": { "type": "string" }
                    }
                },
                "migrations": { "type": "string" },
                "commands": {
                    "type": "array",
                    "items": { "type": "string" }
                },
                "middleware": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "array",
                        "items": { "type": "string" }
                    }
                },
                "events": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "array",
                        "items": { "type": "string" }
                    }
                },
                "permissions": {
                    "type": "array",
                    "items": { "type": "string" }
                }
            }
        },
        "frontend": {
            "type": "object",
            "description": "Frontend configuration (bundle path is auto-discovered from conventional paths if omitted)",
            "properties": {
                "bundle": { "type": "string" },
                "styles": { "type": "string" },
                "css_isolation": {
                    "type": "object",
                    "properties": {
                        "mode": { "type": "string" },
                        "class": { "type": "string" },
                        "className": { "type": "string" }
                    }
                },
                "slots": {
                    "type": "object",
                    "description": "DEPRECATED: Define slots in frontend code via createExtension({ slots: [...] }) instead.",
                    "additionalProperties": {
                        "type": "object"
                    }
                }
            }
        },
        "health": {
            "type": "object",
            "properties": {
                "checks": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["id", "label"],
                        "properties": {
                            "id": { "type": "string" },
                            "label": { "type": "string" },
                            "description": { "type": "string" },
                            "severity": { "type": "string" }
                        }
                    }
                }
            }
        },
        "schedules": {
            "type": "object",
            "properties": {
                "tasks": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["id", "label", "command"],
                        "properties": {
                            "id": { "type": "string" },
                            "label": { "type": "string" },
                            "description": { "type": "string" },
                            "command": { "type": "string" },
                            "cron": { "type": "string" },
                            "schedule": {
                                "type": "object",
                                "properties": {
                                    "type": { "type": "string" },
                                    "at": { "type": "string" },
                                    "day": { "type": "string" },
                                    "interval": { "type": "integer" }
                                }
                            },
                            "timezone": { "type": "string" },
                            "without_overlapping": { "type": "boolean" },
                            "on_one_server": { "type": "boolean" },
                            "run_in_maintenance": { "type": "boolean" },
                            "enabled": { "type": "boolean" }
                        }
                    }
                }
            }
        },
        "admin": {
            "type": "object",
            "properties": {
                "views": {
                    "type": "object"
                },
                "settings": {
                    "type": "object",
                    "description": "Admin settings schema. Supports full format (with 'fields' array) or shorthand format (field_key: { type, default, ... }).",
                    "additionalProperties": true
                }
            }
        }
    },
    "definitions": {
        "settingsFieldFull": {
            "type": "object",
            "required": ["key"],
            "properties": {
                "key": { "type": "string" },
                "label": { "type": "string" },
                "type": {
                    "type": "string",
                    "enum": ["string", "text", "number", "boolean", "select"]
                },
                "required": { "type": "boolean" },
                "default": {},
                "help": { "type": "string" },
                "description": { "type": "string" },
                "placeholder": { "type": "string" },
                "input": {
                    "type": "string",
                    "enum": ["text", "email", "password", "url", "color", "number"]
                },
                "public": { "type": "boolean" },
                "options": { "type": "array" }
            }
        },
        "settingsFieldShorthand": {
            "type": "object",
            "description": "Shorthand field definition: { type, label?, default?, required?, public?, options?, ... }",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["string", "text", "number", "boolean", "select"]
                },
                "label": { "type": "string" },
                "required": { "type": "boolean" },
                "default": {},
                "help": { "type": "string" },
                "description": { "type": "string" },
                "placeholder": { "type": "string" },
                "input": { "type": "string" },
                "public": { "type": "boolean" },
                "options": { "type": "array" }
            }
        }
    }
}

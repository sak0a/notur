{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "lib": ["DOM", "ES2019"],
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
